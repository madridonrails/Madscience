<h1><span><%= t 'assignments.deny.title', :user => @assignment.user.login, :event => @assignment.event.name %></span></h1>
<% form_for @assignment, :url => {:action => :deny, :method => :put}, :html => {:class => 'standard-form'} do |f|%>
  <fieldset>
    <legend><%= t 'assignments.deny.title', :user => @assignment.user.login, :event => @assignment.event.name %></legend>
      <button type="submit" class="positive">
        <%= image_tag 'icons/tick.png', :alt => t('general.ok'), :title => t('general.ok') %><span><%= t'general.ok' %></span>
      </button>
      <%= link_to image_tag('icons/cross.png', :alt => t('general.cancel')) + 'Volver', root_path, :class => 'button negative', :title => t('general.cancel') %>
  </fieldset>
<% end %>