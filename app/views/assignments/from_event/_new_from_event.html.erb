<%= object_messages(@assignment) %>
<h1><span><%= t('assignments.new_assignment_from_event', :event => @event.code) %></span></h1>
<% form_for @assignment, :url => event_assignments_path(@event), :html => {:class => 'standard-form'} do |f| %>
  <fieldset>
    <legend>><%= t('assignments.new_assignment_from_event', :event => @event.code) %></legend>
    <%= render :partial => '/assignments/from_event/form', :locals => {:f => f} %>
  </fieldset>
<% end %>

