<!--<h1><%= t'general.login' %></h1>-->
<div id="sessions-main">
  <%= object_messages %>
  <% form_tag session_path do -%>
    <div id="fields">
      <%= label_tag 'login', t('sessions.login.login') %>
      <%= text_field_tag 'login', @login %>

      <%= label_tag 'password', t('sessions.login.password') %>
      <%= password_field_tag 'password', nil %>

    <!-- Uncomment this if you want this functionality
    <p><%= label_tag 'remember_me', t('sessions.login.remember_me') %>
      <%= check_box_tag 'remember_me', '1', @remember_me %></p>
    -->
      <%= link_to t('users.signup'), signup_url %>
      <%= link_to t('users.forgot'), forgot_url %>
    </div>
    <button type="submit" class="positive" title ="<%=t('sessions.login.submit')%>">
      <%= image_tag 'key_64.png', :alt => t('sessions.login.submit'), :title => t('sessions.login.submit') %><br/>
      <!--%= t'sessions.login.submit' %-->
    </button>
  <% end -%>
</div>
