<%=  form_tag users_url, :method => :get %>
  <table id="table-filter">
    <tr>
      <td><%= label :filter, :login, t('activerecord.attributes.user.login') %></td>
      <td><%= text_field_tag 'filter[login]', (@filter[:login] rescue '')   %></td>
    </tr>
    <tr>
      <td><%= label :filter, :email, t('activerecord.attributes.user.email') %></td>
      <td><%= text_field_tag 'filter[email]', (@filter[:email] rescue '')   %></td>
    </tr>
  </table>
  <%= submit_tag t('general.filter'), {:class => "button"} %>
</form>
