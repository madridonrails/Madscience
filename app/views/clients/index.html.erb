  <h1><%= t 'clients.clients' %></h1>
<%= object_messages %>
  <%= render :partial => 'filter' %>
<% unless @clients.empty? %>
  <table id="items-list">
    <%= render :partial => 'header' %>
    <%= render :partial => 'client', :collection => @clients %>
  </table>
<% end %>
  <div id="index-add-button">
    <%=  link_to image_tag('plus_32.png', :class => 'add-button', :alt => t('general.new'), :title => t('general.new')), new_client_url %>
  </div>
<%= will_paginate(@clients, :prev_label => t('pagination.prev'), :next_label => t('pagination.next'), :params => params.clone.delete_if{|k,v| k == 'controller' || k == 'action' || k == 'page'}) %>
