# Configuration for SMTP.
ActionMailer::Base.delivery_method = :smtp
ActionMailer::Base.default_charset = 'utf-8'
ActionMailer::Base.default_content_type = 'text/html'
# Don't care if the mailer can't send
ActionMailer::Base.raise_delivery_errors = true

# The next lines are for configuring mail with gmail. Uncomment in order to use
 require "tlsmail"
 Net::SMTP.enable_tls(OpenSSL::SSL::VERIFY_NONE)

ActionMailer::Base.smtp_settings = { 
  :address        => "smtp.server.com",
  :port           => 25, 
  :domain         => "domain.com",
  :authentication => :login,                  # if needed, it can be :plain, :login, or :cram_md5
  :user_name      => "username",                  # if needed
  :password       => "password",                # if needed
}

ADMINEMAIL = 'mail@domain.com'